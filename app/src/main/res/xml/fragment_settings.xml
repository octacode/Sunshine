<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Location Settings">
        <EditTextPreference
            android:key="@string/ZIP_pref"
            android:title="Location"
            android:defaultValue="94043"
            android:summary="Enter your location or postal-code."/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Unit and Measurement">
        <ListPreference
            android:key="@string/UNIT_pref"
            android:title="Unit"
            android:summary="Metric or Imperial"
            android:defaultValue="0"
            android:entries="@array/UNIT_pref_display"
            android:entryValues="@array/UNIT_pref_values"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Notifications Settings">
        <CheckBoxPreference
            android:title="Enable Notifications"
            android:key="@string/pref_notifications_enable"
            android:defaultValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Themes">
        <ListPreference
            android:title="Select Your Theme"
            android:key="theme"
            android:defaultValue="0"
            android:entries="@array/theme_entries"
            android:entryValues="@array/theme_values"/>
    </PreferenceCategory>
</PreferenceScreen>